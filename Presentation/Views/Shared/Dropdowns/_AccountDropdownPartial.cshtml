<div id="account-container">
    <button type="button" data-type="dropdown" data-target="#account-dropdown" class="btn-account" onclick="toggleDropdown()">
        <img src="/Images/Users/User-girl-brunette.svg" alt="template avatar">
    </button>
    <div id="account-dropdown" class="dropdown hide">
        <div class="dropdown-header">
            <div class="account-name">
                <img src="/Images/Users/User-girl-brunette.svg" alt="template avatar">
                <span>@User.Identity?.Name</span>
            </div>
        </div>

        <div class="dropdown-body">
            <div></div>
            <div class="divider"></div>
            <form asp-controller="Auth" asp-action="SignOut" method="post" class="logout-form">
                @Html.AntiForgeryToken()
                <button type="submit" class="logout-button">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span>Logout</span>
                </button>
            </form>
        </div>

    </div>
</div>