@model Business.Models.EditProjectDataViewModel

<section id="edit-project-modal" class="modal hide">
    <div class="card modal-card">
        <div class="card-header">
            <h3>Edit Project</h3>
            <button class="btn-close" onclick="closeEditModal()">
                <i class="fa-solid fa-x"></i>
            </button>
        </div>

        <div class="add-project-logo">
            <img src="/Images/Logotype/AddProjectLogoImg.svg" alt="Project logotype">
        </div>

        <div class="card-body">
            <form asp-controller="Projects" asp-action="Edit" id="edit-project-form" method="post" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" id="edit-project-id" />

                <div class="form-group">
                    <label class="form-label edit">Project Name</label>
                    <input id="edit-project-name" class="form-input" type="text" placeholder="Project Name" />
                </div>
                <div class="form-group">
                    <label class="form-label edit">Client Name</label>
                    <input id="edit-client-name" class="form-input" type="text" placeholder="Client Name" />
                </div>

                <div class="form-group">
                    <label class="form-label edit">Description</label>
                    <textarea id="edit-project-description" class="hide"></textarea>

                    <div class="wysiwyg-wrapper">
                        <div id="edit-project-description-wysiwyg-editor" class="wysiwyg-editor"></div>
                        <div id="edit-project-description-wysiwyg-toolbar" class="wysiwyg-toolbar">
                            <span class="ql-formats">
                                <button class="ql-bold"></button>
                                <button class="ql-italic"></button>
                                <button class="ql-underline"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-align" value=""></button>
                                <button class="ql-align" value="center"></button>
                                <button class="ql-align" value="right"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-list" value="bullet"></button>
                                <button class="ql-list" value="ordered"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-link"></button>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-horizontal-group">
                    <div class="form-group">
                        <label class="form-label edit">Start Date</label>
                        <input id="edit-start-date" class="form-input" type="date" />
                    </div>
                    <div class="form-group">
                        <label class="form-label edit">End Date</label>
                        <input id="edit-end-date" class="form-input" type="date" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label edit">Budget</label>
                    <div class="form-input-extended">
                        <i class="fa-solid fa-dollar-sign"></i>
                        <input id="edit-budget" class="form-input" type="text" placeholder="0" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label edit">Status</label>
                    <select class="form-input" name="StatusId" id="edit-status-id">
                        <option value="1">Started</option>
                        <option value="2">Completed</option>
                    </select>
                </div>

                <div class="btn-submit-container">
                    <button type="submit" class="btn btn-submit">Save</button>
                </div>

            </form>
        </div>
    </div>
</section>
