@model Business.Models.AddProjectFormData

<section id="add-project-modal" class="modal hide">
    <div class="card">
        <div class="card-header">
            <h3>Add Projects</h3>
            <button class="btn-close" data-type="close" data-target="add-project-modal" onclick="closeModal()">
                <i class="fa-solid fa-x"></i>
            </button>
        </div>

        <div class="add-project-logo">
            <img src="/Images/Logotype/AddProjectLogoImg.svg" alt="Project logotype">
        </div>

        <div class="card-body">
            <form asp-controller="Projects" asp-action="Create" method="post" novalidate onsubmit="copyAddProjectDescription()">
                @Html.AntiForgeryToken()
                @Html.Partial("_ValidationSummaryPartial")

                <div class="form-group">
                    <label class="form-label" asp-for="ProjectName"></label>
                    <input asp-for="ProjectName" class="form-input" type="text" placeholder="Project Name"/>
                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="ClientName"></label>
                    <input asp-for="ClientName" class="form-input" type="text" placeholder="Client Name"/>
                    <span asp-validation-for="ClientName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Description</label>
                    <textarea asp-for="Description" id="add-project-description" name="Description" class="hide"></textarea>

                    <div class="wysiwyg-wrapper">
                        <div id="add-project-description-wysiwyg-editor" class="wysiwyg-editor">
                        </div>

                        <div id="add-project-description-wysiwyg-toolbar" class="wysiwyg-toolbar">
                            <span class="ql-formats">
                                <button class="ql-bold"></button>
                                <button class="ql-italic"></button>
                                <button class="ql-underline"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-align" value=""></button>
                                <button class="ql-align" value="center"></button>
                                <button class="ql-align" value="right"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-list" value="bullet"></button>
                                <button class="ql-list" value="ordered"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-link"></button>
                            </span>
                        </div>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-horizontal-group">
                    <div class="form-group">
                        <label class="form-label">Start Date</label>
                        <input id="add-start-date" class="form-input" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">End Date</label>
                        <input id="add-end-date" class="form-input" type="date" value="@DateTime.Today.AddDays(7).ToString("yyyy-MM-dd")" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Budget</label>
                    <div class="form-input-extended">
                        <i class="fa-solid fa-dollar-sign"></i>
                        <input asp-for="Budget" class="form-input" type="number" step="0.01" placeholder="0" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Status</label>
                    <select class="form-input" name="StatusId">
                        <option value="1">Started</option>
                        <option value="2">Completed</option>
                    </select>
                </div>

                <div class="btn-submit-container">
                    <button type="submit" class="btn btn-submit" onclick="copyAddProjectDescription()">Create</button>
                </div>

            </form>
        </div>
    </div>
</section>
